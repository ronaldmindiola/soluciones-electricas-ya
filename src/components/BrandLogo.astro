---
import logoDark from "@images/logo/logo-dark.png";
import logoLight from "@images/logo/logo-light.png";
interface BrandLogoProps {
  alt?: string;
  className?: string;
}

const { alt = 'Brand Logo', className = '' } = Astro.props;
---

<picture>
  <source
    srcset={logoDark.src}
    media="(prefers-color-scheme: dark)"
  />
  <source
    srcset={logoLight.src}
    media="(prefers-color-scheme: light)"
  />
  <img
    alt={alt}
    class={`w-auto h-10 ${className}`}
    loading="lazy"
  />
</picture>
