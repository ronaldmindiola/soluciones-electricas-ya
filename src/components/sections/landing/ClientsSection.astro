---
import { Image } from 'astro:assets';

// Define props from Astro
const { title, subTitle, partners } = Astro.props;

interface Partner {
  logo: any;
  name?: string;
  href?: string;
}

interface Props {
  title: string;
  subTitle?: string;
  partners: Partner[];
}
---

<section
  class="mx-auto max-w-[85rem] px-4 py-10 sm:px-6 lg:px-8 lg:py-14 2xl:max-w-full"
>
  <!-- Title and description -->
  <div class="mx-auto mb-6 w-full space-y-1 text-center sm:w-1/2 lg:w-1/3">
    <h2
      class="text-balance text-2xl font-bold leading-tight text-neutral-800 dark:text-neutral-200 sm:text-3xl"
    >
      {title}
    </h2>
    {subTitle && (
      <p class="text-pretty leading-tight text-neutral-600 dark:text-neutral-400">
        {subTitle}
      </p>
    )}
  </div>
  <div
    class="flex flex-row items-center justify-center gap-y-2 sm:flex-row gap-x-4 sm:gap-x-12 sm:gap-y-0 lg:gap-x-24 grayscale"
  >
    <!-- Clients Group SVGs -->
    {partners.map((partner) => (
      <a href={partner.href} target="_blank" rel="noopener noreferrer" aria-label={`Enlace a ${partner.name}`}>
        <Image src={partner.logo} alt={`imagen logo de ${partner.name}`} class="w-20 lg:w-28 h-auto object-contain hover:cursor-cell " />
      </a>
    ))}
  </div>
</section>
